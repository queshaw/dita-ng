<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <!-- Define the domain values of this module -->
  <define name="domains-atts-value" combine="choice">
    <value>(topic task)</value>
  </define>
  
  <include href="../../technicalContent/rng/task.mod.rng">
    <define name="steps-informal">
      <ref name="steps-informal.element"/>
    </define>
    <define name="result">
      <ref name="result.element"/>
    </define>
    <define name="steps">
      <ref name="steps.element"/>
    </define>
    <define name="steps-unordered">
      <ref name="steps-unordered.element"/>
    </define>
    <define name="context">
      <ref name="context.element"/>
    </define>  
    <define name="taskbody.content">
      <zeroOrMore>
        <choice>
          <ref name="prelreqs"/>
          <ref name="context"/>
          <ref name="section"/>
        </choice>
      </zeroOrMore>
      <optional>
        <choice>
          <ref name="steps"/>
          <ref name="steps-unordered"/>
          <ref name="steps-informal"/>
        </choice>
      </optional>
      <optional>
        <ref name="result"/>
      </optional>
      <zeroOrMore>
        <ref name="example"/>
      </zeroOrMore>
      <optional>
        <ref name="closereqs"/>
      </optional>
    </define>
  </include>
  <include href="../../base/rng/topic.mod.rng">
    <define name="section">
      <ref name="section.element"/>
    </define>
    <define name="example">
      <ref name="example.element"/>
    </define>
  </include>

  <define name="prelreqs">
    <ref name="prelreqs.element"/>
  </define>
  <define name="closereqs">
    <ref name="closereqs.element"/>
  </define>
  
</grammar>
